@model IEnumerable<Capstone.Models.UserList>

@{
    ViewData["Title"] = "Index";
}

<h1>Saved Games</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.game)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.game.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.game.Platform)
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.UserListId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
